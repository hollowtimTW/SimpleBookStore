@inject UserManager<ApplicationUser> UserManager

@{
    ApplicationUser? currentUser = null;
    bool isAdmin = false;
    if (User?.Identity?.IsAuthenticated == true)
    {
        currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            isAdmin = await UserManager.IsInRoleAsync(currentUser, SD.Role_Admin);
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleBookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimpleBookStore.styles.css" asp-append-version="true" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container my-3">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SimpleBookStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ms-3">
                    <ul class="navbar-nav flex-grow-1 gap-2">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">商品列表</a>
                        </li>
                        <vc:category-menu></vc:category-menu>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Product" asp-action="Search">
                                <i class="bi bi-search"></i> 商品查詢
                             </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Author" asp-action="Index">作者列表</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center ms-auto">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <div class="d-flex align-items-center gap-2 text-dark">
                                <div class="dropdown">
                                    <a class="btn btn-sm dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @currentUser?.FullName
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-action="MyOrders" asp-controller="Order">歷史訂單</a></li>
                                    </ul>
                                </div>
                                <a asp-action="Index" asp-controller="Cart" class="btn btn-sm bg-primary text-light"><i class="bi bi-cart3"></i></a>
                                @if (isAdmin)
                                {
                                    <a asp-area="Admin" asp-action="Index" asp-controller="Home" class="btn btn-dark btn-sm">切換後台</a>
                                }
                                <form asp-controller="Account" asp-action="Logout" method="post" class="mb-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-dark">登出</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center gap-2 text-dark">
                                <a class="btn btn-sm btn-outline-dark" asp-controller="Account" asp-action="Login">登入</a>
                                <a class="btn btn-sm btn-outline-dark" asp-controller="Account" asp-action="Register">註冊</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mb-3" style="flex:1">
        <main role="main" style="overflow-y: auto; overflow-x: hidden;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row text-center text-md-start my-3">
                <!-- 第一欄：社交媒體 -->
                <div class="col-12 col-md-3 mb-3">
                    <h5 class="text-primary">歡迎追蹤</h5>
                    <div class="d-flex justify-content-center justify-content-md-start gap-3 ps-2">
                        <a href="#" class="text-dark" style="font-size: 1.5rem;"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-dark" style="font-size: 1.5rem;"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-dark" style="font-size: 1.5rem;"><i class="bi bi-line"></i></a>
                    </div>
                </div>
                <!-- 第二欄：聯絡資訊 -->
                <div class="col-12 col-md-3 mb-3 text-wrap">
                    <h5 class="text-primary">聯絡資訊</h5>
                    <div class=" ps-2">
                        <p>
                            SweetNest甜巢
                        </p>
                        <p>09xx-xxx-xxx</p>
                        <p>SweetNest@test.com</p>
                        <p>新北市XX區XX路XX號</p>
                    </div>
                </div>
                <!-- 第三欄：客戶服務 -->
                <div class="col-12 col-md-3 mb-3">
                    <h5 class="text-primary">客戶服務</h5>
                    <ul class="list-unstyled ps-2">
                        <li><a href="#">自取/外帶說明</a></li>
                        <li><a href="#">宅配說明</a></li>
                        <li><a href="#">黑貓宅配服務連結</a></li>
                    </ul>
                </div>
                <!-- 第四欄：購物須知 -->
                <div class="col-12 col-md-3 mb-3">
                    <h5 class="text-primary">購物須知</h5>
                    <ul class="list-unstyled ps-2">
                        <li><a href="#">隱私權聲明</a></li>
                        <li><a href="#">防詐騙宣導</a></li>
                        <li><a href="#">退貨政策</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- 購物車 Offcanvas -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartOffcanvas" aria-labelledby="cartOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="cartOffcanvasLabel"><i class="bi bi-cart3"></i> 購物車</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="關閉"></button>
        </div>
        <div class="offcanvas-body p-0 d-flex flex-column" style="min-width:320px;">
            <div id="cartList" class="list-group list-group-flush">
                <!-- JS 動態填入購物車內容 -->
                <div class="text-center py-5 text-muted">購物車是空的</div>
            </div>
            <div class="mt-auto p-3 border-top bg-light">
                <div class="d-flex justify-content-between mb-3">
                    <span>總計</span>
                    <span id="cartTotal" class="fw-bold text-danger">NT$0</span>
                </div>
                <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary w-100 mb-2" id="checkoutBtn" style="pointer-events:none; opacity:0.7;">前往結帳</a>
                <button type="button" class="btn btn-outline-danger w-100" id="clearCartBtn">清空購物車</button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_Notification" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
