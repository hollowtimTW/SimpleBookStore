@model VerifyResetCodeVM

@{
    ViewData["Title"] = "驗證重設碼";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">驗證重設碼</h3>
            </div>
            <div class="card-body">
                <p class="text-info mb-3">
                    我們已發送重設密碼的驗證碼到：<br>
                    <strong>@Model.Email</strong>
                </p>

                <form asp-action="VerifyResetCode" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <input asp-for="Email" type="hidden" />

                    <div class="form-group mb-3">
                        <label asp-for="Code" class="form-label"></label>
                        <input asp-for="Code" class="form-control text-center" 
                               style="font-size: 1.2rem;" 
                               placeholder="請輸入驗證碼" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <input type="submit" value="驗證並繼續" class="btn btn-primary w-100" />
                    </div>
                </form>

                <div class="text-center">
                    <a asp-action="ForgotPassword" class="btn btn-link">重新發送驗證碼</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}