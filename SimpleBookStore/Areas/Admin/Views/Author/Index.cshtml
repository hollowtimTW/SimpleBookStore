@model IEnumerable<Author>

@{
    ViewData["Title"] = "作者列表";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold text-center border-bottom pb-2 bg-light bg-opacity-75 rounded shadow-sm animate__animated animate__fadeInDown">
        @ViewData["Title"]
    </h2>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <a asp-area="Admin" asp-action="Create" asp-controller="Author" class="btn btn-primary mb-3 float-end">新增作者</a>
            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th class="text-center" style="width:20%;">圖片</th>
                        <th class="text-center" style="width:60%;">作者名稱</th>
                        <th style="width:20%;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(author.ImageUrl))
                                {
                                    <img src="@author.ImageUrl"
                                         alt="作者圖片"
                                         style="max-width:60px;max-height:60px;object-fit:cover;" />
                                }
                                else
                                {
                                    <i class="bi bi-person-circle" style="font-size: 2.5rem; color: #ccc;"></i>
                                }
                            </td>
                            <td class="text-center">@author.Name</td>
                            <td>
                                <a href="@Url.Action("Edit", "Author", new { id = author.Id })" class="btn btn-warning btn-sm" title="編輯">編輯</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>